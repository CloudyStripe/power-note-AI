{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Power Note AI",
    "description": "This is a Chrome extension built with React and TypeScript",
    "action": {
        "default_popup": "index.html",
        "default_title": "Power Note AI"
    },
    "side_panel": {
            "default_path": "index.html"
    },
    "permissions": [
        "storage",
        "scripting",
        "sidePanel"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./src/content-script/content.tsx"
            ]
        }
    ]
}